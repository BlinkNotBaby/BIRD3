{
    "name": "ingwiephoenix/bird3",
    "description": "The PHP backend to the Dragon's Inn runtime, BIRD3.",
    "license": "MIT",
    "require": {
        "php": ">=5.5.4",
        "ext-pcntl": "*",
        "ext-hprose": "^1.5.0",
        "ext-sockets": "*",
        "ext-sysvmsg": "*",
        "predis/predis": "0.8.*",
        "okwinza/cloudflare-api": "dev-master",
        "evenement/evenement": "^2.0.0",
        "walkor/workerman": "^3.2.0",
        "corneltek/cliframework": "*",
        "voodoophp/paginator": "2.*",
        "kevinlebrun/colors.php": "0.*",
        "phine/path": "~1.0",
        "robmorgan/phinx": "^0.5.0",
        "jdorn/sql-formatter": "^1.2",
        "ircmaxell/password-compat": "^1.0",
        "hprose/hprose": "^1.5",
        "caffeinated/modules": "^2.1",
        "caffeinated/SEO": "^2.0",
        "laravel/framework": "^5.1.22",
        "pingpong/widget": "^2.1",
        "wikimedia/composer-merge-plugin": "^1.2",
        "spatie/laravel-backup": "^2.7",
        "florianwolters/component-util-singleton": "^0.3.2",
        "ingwiephoenix/hprose-workerman": "^1.0",
        "laravelcollective/html": "^5.1",
        "ikimea/browser": "^1.12",
        "athari/yalinqo": "^2.3",
        "zizaco/entrust": "dev-laravel-5",
        "mustangostang/spyc": "^0.5.1",
        "sammyk/laravel-facebook-sdk": "^3.2",
        "thujohn/twitter": "^2.1"
    },
    "require-dev": {
        "peridot-php/peridot": "^1.16",
        "peridot-php/peridot-httpkernel-plugin": "^1.1",
        "expect/peridot-expect-plugin": "^3.0"
    },
    "config": {
        "vendor-dir": "php_modules/"
    },
    "autoload": {
        "psr-4": {
            "BIRD3\\": "app/",
            "BIRD3\\Test\\": "test/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "app/Extensions/*/composer.json",
                "app/Foundation/*/composer.json",
                "app/App/Modules/*/composer.json"
            ],
            "recurse": true,
            "replace": true,
            "merge-extra": true
        }
    }
}
